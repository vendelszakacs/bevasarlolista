<Window x:Class="bevasarlolista.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bevasarlolista"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		
		<!-- 1) Bevitel-->
		<StackPanel Grid.Row="0" Margin="0,0,0,10">
			<WrapPanel Margin="0,0,0,6">
				<TextBlock Text="Termék" VerticalAlignment="Center"
						   Width="60"/>
				<ComboBox x:Name="Termekvalaszto"
						  Width="180">
					<!-- Tag == egységár (Ft)-->
					<ComboBoxItem Content="Kenyér" Tag="650"/>
					<ComboBoxItem Content="Tej (1L)" Tag="500"/>
					<ComboBoxItem Content="Tojás (10)" Tag="980"/>
					<ComboBoxItem Content="Alma (kg)" Tag="600"/>
					<ComboBoxItem Content="Vaj (250g)" Tag="1000"/>
				</ComboBox>

				<TextBlock Text="Egységár:" Margin="16,0,0,0"
						   VerticalAlignment="Center"/>
				<TextBox x:Name="Egysegarmezo" Width="80"
						 Margin="6,0,0,0" Text="0"/>
				<TextBlock Text="Mennyiség:" Margin="16,0,0,0"
						   VerticalAlignment="Center"/>
				<TextBox x:Name="MennyisegMezo" Width="60"
						 Margin="6,0,0,0" Text="1"/>
				<Button Content="Hozzáadás" Margin="12,0,0,0" Click="Hozzaad_Click"/>
			</WrapPanel>

			<WrapPanel>
				<Button Content="CE (ürlap törlés)" Margin="0,0,10,0" Click="CE_Click"/>
				<Button Content="Kijelölt törlése" Margin="0,0,10,0" Click="Kijelolttorles_Click"/>
				<Button Content="C (lista törlése)" Click="CListatorles_Click" />
			</WrapPanel>

			<ListBox x:Name="Lista" Height="200" Margin="0,0,0,10"/>

			<WrapPanel Margin="10,0,0,0">
				<CheckBox x:Name="Afajelolo" Content="ÁFA 27%"
						  />
				<TextBlock Text="Összesen:" FontWeight="Bold"
						   Margin="20,0,5,0"/>
				<TextBlock x:Name="OsszesenCimke" FontWeight="Bold"
						   Text="0 Ft"/>

			</WrapPanel>
		</StackPanel>
    </Grid>
</Window>
